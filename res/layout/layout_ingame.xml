<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="GameActivity"
        >

    <view
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            class="com.robomobo.view.SurfaceViewIngame"
            android:id="@+id/view"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>

    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="L"
            android:id="@+id/button_left"
            android:minHeight="64dp"
            android:minWidth="64dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:enabled="true"
            android:onClick="movePlayerL"/>

    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R"
            android:id="@+id/button_right"
            android:minHeight="64dp"
            android:minWidth="64dp"
            android:layout_alignTop="@+id/button_down"
            android:layout_toRightOf="@+id/button_down"
            android:enabled="true"
            android:onClick="movePlayerR"/>

    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="U"
            android:id="@+id/button_up"
            android:minWidth="64dp"
            android:minHeight="64dp"
            android:layout_above="@+id/button_right"
            android:layout_toLeftOf="@+id/button_right"
            android:enabled="true"
            android:onClick="movePlayerU"/>

    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D"
            android:id="@+id/button_down"
            android:minWidth="64dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/button_left"
            android:minHeight="64dp"
            android:enabled="true"
            android:onClick="movePlayerD"/>
            
    <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toggleDebug" android:layout_alignParentTop="true"
            android:layout_alignParentRight="true" android:textOff="Debug mode OFF"
            android:textOn="Debug mode ON" android:onClick="setDEBUG"/>
            
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next player"
            android:id="@+id/next"
            android:layout_alignParentBottom="true" android:layout_alignParentRight="true"
            android:onClick="nextPlayer"/>
            
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prev player"
            android:id="@+id/prev"
            android:layout_alignParentBottom="true" android:layout_toLeftOf="@+id/next"
            android:onClick="prevPlayer"/>
            
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/currentPlayer"
            android:layout_above="@+id/next" android:layout_alignParentRight="true"
            />
</RelativeLayout>
